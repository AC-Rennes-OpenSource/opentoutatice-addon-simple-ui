<package type="addon" name="open-toutatice-addons-simple-ui" version="@VERSION@">
	<title>Addon to simplify Portal Views</title>
	<description>
		<p>Allows to have simplifed Portal Views (in Nuxeo back-office too).</p>
	</description>
	<home-page>http://www.osivia.com</home-page>
	<vendor>Osivia</vendor>
	<installer restart="true" />
	<uninstaller restart="true" />
	<!-- <hotreload-support>false</hotreload-support> -->
	<!-- <require-terms-and-conditions-acceptance>false</require-terms-and-conditions-acceptance> -->
	<nuxeo-validation>none</nuxeo-validation>
	<production-state>production_ready</production-state>
	<supported>false</supported>
	<platforms>
		<platform>cap-@DISTRIB_VERSION@</platform>
	</platforms>
	<dependencies>
	    <package>open-toutatice:3.4.0-RC06</package>
	    <!-- FIXME: why Drive? Add dependency to generic-ui -->
		<package>nuxeo-drive:1.4.4:1.4.4</package>
		<package>open-toutatice-addons-file-based-naming:1.4-RC01</package>
	</dependencies>
	<license>LGPL 2.1</license>
	<license-url>http://www.gnu.org/licenses/lgpl-2.1.html</license-url>
</package>
